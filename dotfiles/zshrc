source ~/.zprezto/init.zsh
export VISUAL=vim
export EDITOR=$VISUAL

# aliases
alias glog='git log --oneline --decorate --graph --all'

# perlbrew
if [ -e ~/perl5/perlbrew/etc/bashrc ]; then
    source ~/perl5/perlbrew/etc/bashrc
fi

# source local extras if it exists
